def set_func(func):
    print("开始装饰")

    def call_fun(*args,**kargs):
        print("权限验证一")
        print("权限验证一")
        func(*args,**kargs)
    return call_fun

@set_func
def login(num,*args,**kargs):
    print("***************test1******************%d" % num)
    print("***************test******************",args)
    print("***************test1******************",kargs)
#login()
login(100)
login(100,300,200,m=100)
